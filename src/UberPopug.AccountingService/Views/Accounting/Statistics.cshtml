@model List<UberPopug.AccountingService.Users.User>

@{
    ViewBag.Title = "Tasks";
    Layout = "_Layout";
}

<h2>Users accounting statistics</h2>

<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Balance</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>@user.Balance</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>