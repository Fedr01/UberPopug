@model UberPopug.AuthService.Users.User

<div class="login-page">
    <div class="lead">
        <h1>Create new user</h1>
    </div>

    <partial name="_ValidationSummary"/>

    <div class="row">


        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" placeholder="Username" asp-for="Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="Role"></label>
                            <input type="password" class="form-control" placeholder="Role" asp-for="Role">
                        </div>
                        <button class="btn btn-primary" name="button" value="login">Ok</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>